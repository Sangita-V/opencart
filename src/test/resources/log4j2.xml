<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" monitorInterval="30">
    <!-- Define properties for reusable values -->
    <Properties>
        <Property name="log-path">./logs</Property>
        <!--   <Property name="log-pattern">%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n</Property> -->
    </Properties>

    <!-- Define appenders (output destinations) -->
    <Appenders>
        <!-- Console appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </Console>

        <!-- Rolling file appender -->
        <RollingFile name="File" fileName="${log-path}/automation.log"
                     filePattern="${log-path}/automation-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
             <SizeBasedTriggeringPolicy size="5000" />
        </RollingFile>
    </Appenders>

    <!-- Define loggers -->
    <Loggers>
        <!-- Root logger for all other log messages -->
        <Root level="Info">
            <!--  <AppenderRef ref="Console" /> -->
            <AppenderRef ref="File" />
        </Root>
    </Loggers>
</Configuration>